# DispatchApp.client Environment Variables Template
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit the .env file to version control!

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Development API URL (local server)
VITE_API_BASE_URL_DEV=https://localhost:7170

# Production API URL (replace with your live server URL when deploying)
VITE_API_BASE_URL_PROD=https://your-production-api.com

# =============================================================================
# SIGNALR REAL-TIME COMMUNICATION
# =============================================================================

# SignalR Hub URL for development (local server)
VITE_SIGNALR_HUB_URL_DEV=http://your-local-ip:5062/hubs/dispatch

# SignalR Hub URL for production (replace with your live server URL)
VITE_SIGNALR_HUB_URL_PROD=https://your-production-api.com/hubs/dispatch

# =============================================================================
# GOOGLE MAPS API
# =============================================================================

# Google Maps API Key - Production (restricted to your domains)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Google Maps API Key - Development (for local testing)
VITE_GOOGLE_MAPS_API_KEY_DEV=your-dev-google-maps-api-key

# Use development key (set to 'true' for local testing, 'false' for production)
VITE_USE_DEV_MAPS_KEY=false
